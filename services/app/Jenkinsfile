pipeline{
    agent any

    stages{
        stage('Checkout') {
            steps {
                git credentialsId: 'svc_git_cred', poll: false, url: 'https://github.com/balujaddu/Ecom-app.git';
            }
        }
        stage('Build'){
            steps{
                echo 'Building java project';
                bat "mvn clean package";
            }
        }
        stage('Code Quality'){
            steps{
                echo 'scaning the code with SonarQube';
                withSonarQubeEnv(credentialsId: 'svc_sonar_token') {
                    bat 'sonar:sonar';
                }
            }
        }
        stage('Build Management'){
            archiveArtifacts artifacts: 'archiveArtifacts artifacts: \'target/*.jar, target/*.war\'', followSymlinks: false
        }
    }
    post {
        // Clean after build
        always {
            cleanWs(cleanWhenNotBuilt: false,
                    deleteDirs: true,
                    disableDeferredWipeout: true,
                    notFailBuild: true,
                    patterns: [[pattern: '.gitignore', type: 'INCLUDE'],
                               [pattern: '.propsfile', type: 'EXCLUDE']])
        }
    }
}